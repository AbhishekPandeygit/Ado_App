<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Add Customer
</button>
<div class="container">
<div class="row">
    <div class="col-12">
    <table id="tbl_Customer" class="table table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Email</td>
                <td>Mobile</td>
                <td>Gender</td>
                <td>Country</td>
                <td>State</td>
                <td>City</td>
                <td>Action</td>
                <td>Upload </td>

            </tr>
            
        </thead>
        <tbody>

        </tbody>
    </table>
    </div>
</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add new Customer</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <form>
                        <input type="hidden" id="txtId" />
                            <div class="form-group">
                                <label>Customer Name</label>
                                <input type="text" class="form-control" id="txtName" />
                            </div>
                            <div class="form-group">
                                <label>Customer Email</label>
                                <input type="text" class="form-control" id="txtEmail" />
                            </div>
                            <div class="form-group">
                                <label>Customer Mobile</label>
                                <input type="text" class="form-control" id="txtMobile" />
                            </div>

                            <div class="form-group">
                                <label>Customer Gender</label>
                                <select class="form-control" id="ddlGender">
                                    <option value="">Select</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>

                                </select>
                            </div>

                            <div class="form-group">
                                <label>Country</label>
                                <select class="form-control" id="ddlCountry">
                                    <option value="">Select</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>State</label>
                                <select class="form-control" id="ddlState">
                                    <option value="">Select</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>City</label>
                                <select class="form-control" id="ddlCity">
                                    <option value="">Select</option>
                                </select>
                            </div>
                            <div class="form-group mt-3">

                                <input type="button" class="btn btn-info" id="btnSubmit" value="Submit" />
                            </div>
                            <div class="form-group mt-3">
                                <p id="msg"></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
           @*  <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div> *@
        </div>
    </div>
</div>


<!-- Modal upload profile-->
<div class="modal fade" id="modalUploadProfile" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Upload Customer Profile Image</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                            <input type="hidden" id="hdnId" />
                                <label>Choose Image</label>
                                <input type="file" class="form-control" id="txtFile" />
                            </div>
                            <div class="form-group mt-3">

                                <input type="button" class="btn btn-info" id="btnUpload" value="Upload" />
                            </div>
                            <div class="form-group mt-3">
                                <p id="msgUpload"></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            @*  <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
